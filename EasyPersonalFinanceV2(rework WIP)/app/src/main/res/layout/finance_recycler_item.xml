<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="#F3F3F3"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Electricity"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/ivItemDescriptionImage"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tvItemDate"
        tools:text="12_12_12"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvItemType"
        android:layout_toEndOf="@id/ivItemDescriptionImage"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvItemDueDate"
        tools:text="12_12_12"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvItemType"
        android:layout_toEndOf="@id/tvItemDate"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1500"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:gravity="start"
        />


    <TextView
        android:id="@+id/tvItemKune"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tvItemAmount"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:textColor="#000000"
        tools:text="kn:"/>

    <ImageView
        android:id="@+id/ivItemDescriptionImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/image_desc"
        />

</RelativeLayout>